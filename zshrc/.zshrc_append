# Tab completion for functions
#===============================================================================
_tmux_attach_zsh_autocomplete() {
  local -a sessions
  # Get session names, handling the case where tmux server is not running
  sessions=(${(f)"$(command tmux list-sessions -F "#{session_name}" 2>/dev/null)"})
  _describe 'tmux session' sessions
}
compdef _tmux_attach_zsh_autocomplete tmux_attach

#===============================================================================
# Custom fzf definitions
#===============================================================================
# Quickly selecting git branches using fzf
# ref: https://github.com/junegunn/fzf/blob/master/shell/key-bindings.zsh
__fzf_git_branch_select() {
    setopt localoptions pipefail no_aliases 2> /dev/null
    local item
    git for-each-ref refs/heads/ refs/remotes/ --format='%(refname:short)' | fzf --layout=reverse
    local ret=$?
    echo
    return $ret
}
fzf_git_branch_select_widget() {
    LBUFFER="${LBUFFER}$(__fzf_git_branch_select)"
    local ret=$?
    zle reset-prompt
    return $ret
}
zle     -N            fzf_git_branch_select_widget
bindkey -M emacs '^B' fzf_git_branch_select_widget
bindkey -M vicmd '^B' fzf_git_branch_select_widget
bindkey -M viins '^B' fzf_git_branch_select_widget
if which fzf-git-worktrees-widget &>/dev/null; then
    zle     -N            fzf-git-worktrees-widget
    bindkey -M emacs '^E' fzf-git-worktrees-widget
    bindkey -M vicmd '^E' fzf-git-worktrees-widget
    bindkey -M viins '^E' fzf-git-worktrees-widget
fi

# Quickly selecting jj bookmark using fzf
# ref: https://github.com/junegunn/fzf/blob/master/shell/key-bindings.zsh
__fzf_jj_bookmark_select() {
    setopt localoptions pipefail no_aliases 2> /dev/null
    local item
    jj bookmark list -T 'name ++ "\n"' | uniq | fzf --layout=reverse
    local ret=$?
    echo
    return $ret
}
fzf_jj_bookmark_select_widget() {
    LBUFFER="${LBUFFER}$(__fzf_jj_bookmark_select)"
    local ret=$?
    zle reset-prompt
    return $ret
}
zle     -N            fzf_jj_bookmark_select_widget
bindkey -M emacs '^H' fzf_jj_bookmark_select_widget
bindkey -M vicmd '^H' fzf_jj_bookmark_select_widget
bindkey -M viins '^H' fzf_jj_bookmark_select_widget

